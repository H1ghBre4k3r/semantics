    "license": "EPL-1.0",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.2.0",
        "@theia/core": "latest",
        "@theia/editor": "latest",
        "@theia/editorconfig": "latest",
        "@theia/file-search": "latest",
        "@theia/filesystem": "latest",
        "@theia/languages": "latest",
        "@theia/markers": "latest",
        "@theia/messages": "latest",
        "@theia/metrics": "latest",
        "@theia/monaco": "latest",
        "@theia/navigator": "latest",
        "@theia/outline-view": "latest",
        "@theia/preferences": "latest",
        "@theia/preferences-api": "latest",
        "@theia/preview": "latest",
        "@theia/process": "latest",
        "@theia/search-in-workspace": "latest",
        "@theia/terminal": "latest",
        "@theia/userstorage": "latest",
        "@theia/variable-resolver": "latest",
        "@theia/workspace": "latest",
        "theia-sprotty": "0.1.20",
        "sprotty": "0.4.2",
        "keith-diagram-options": "^0.1.0",
        "keith-kicool": "^0.1.0",
        "vscode-jsonrpc": "^3.6.2",
        "vscode-nsfw": "^1.0.17"
    },
    "devDependencies": {
        "@theia/cli": "latest",
        "@types/chai": "^4.0.1",
        "@types/chai-as-promised": "0.0.31",
        "@types/mocha": "^2.2.41",
        "@types/sinon": "^2.3.5",
        "@types/temp": "^0.8.29",
        "@types/webdriverio": "^4.7.0",
        "electron-builder": "20.9.2",
        "lerna": "^2.4.0",
        "mocha": "^3.4.2",
        "reflect-metadata": "^0.1.12",
        "ts-loader": "^4.4.2",
        "tslint": "^5.7.0",
        "typescript": "2.9.1",
        "uuid": "^3.1.0",
        "vscode-jsonrpc": "^3.6.2",
        "webpack": "^4.16.1"
    },
    "scripts": {
        "build-l": "npm link keith-kicool keith-language-semantics keith-language-pragmatics keith-diagram keith-diagram-options keith-sprotty && yarn prepare",
        "build": "yarn cache clean keith-kicool keith-language-semantics keith-language-pragmatics keith-diagram keith-diagram-options keith-sprotty && yarn delete:files && yarn install --pure-lockfile --registry=http://localhost:4873 && yarn prepare",
        "build-v": "yarn verdaccio && yarn build && fuser -k 4873/tcp",
        "verdaccio": "verdaccio &",
        "delete:files": "(rm ./lib -rf || true) && (rm ./node_modules -rf || true) && (rm ./src-gen -rf || true)",
        "prepare": "theia build --mode development",
        "start": "theia start --root-dir=../workspace",
        "unlinking": "yarn unlink keith-kicool keith-language-semantics keith-language-pragmatics keith-diagram keith-diagram-options keith-sprotty",
        "start:backend:socket": "node ./src-gen/backend/main.js --root-dir=../workspace --LSP_PORT=5007 --port=3000 --loglevel=debug",
        "watch": "theia build --watch"
    },
    "theia": {
        "target": "browser"
    }
}
