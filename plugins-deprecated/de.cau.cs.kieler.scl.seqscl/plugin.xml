<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler.scl.seqscl.commands.category"
            id="de.cau.cs.kieler.scl.seqscl.commands.SCLToSeqSCLTransformation"
            name="SCLToSeqSCLTransformation">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.scl.seqscl.handler.SCLToSeqSCLFileHandler"
            commandId="de.cau.cs.kieler.scl.seqscl.commands.SCLToSeqSCLTransformation">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.scl.seqscl.commands.SCLToSeqSCLTransformation"
               label="SCL to Seq SCL"
               mnemonic="A"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scl">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   
</plugin>
