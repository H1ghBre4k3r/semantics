<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.cau.cs.kieler.synccharts.codegen.sc.SCGenerator"
            description="Generate SC Code"
            id="de.cau.cs.kieler.synccharts.codegen.genSC"
            name="genSC">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.synccharts.codegen.genSC"
               label="Generate SC Code (old)"
               style="push"
               tooltip="Generate SC code for the current SyncChart">
			<visibleWhen>
	         <iterate
                ifEmpty="false"
                operator="and">
    	        <adapt
        	          type="org.eclipse.core.resources.IFile">
            	   <test
            	   		 forcePluginActivation="true"
                	     property="org.eclipse.core.resources.extension"
                    	 value="kixs">
               	   </test>
            	</adapt>
         	</iterate>
          </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
