	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="synctext">
        </resourceServiceProvider>
    </extension>


    <!-- marker definitions for de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext -->
    <extension
            id="synctext.check.fast"
            name="Synctext Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="synctext.check.normal"
            name="Synctext Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="synctext.check.expensive"
            name="Synctext Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>
   <extension
            point="org.eclipse.ui.preferencePages">
        <page
            category="de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext"
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext.compiler.preferencePage"
            name="Compiler">
            <keywordReference id="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.keyword_Synctext"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            category="de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext"
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext.compiler.propertyPage"
            name="Compiler">
            <keywordReference id="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.keyword_Synctext"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
    <!-- quickfix marker resolution generator for de.cau.cs.kieler.yakindu.sccharts.model.stext.Synctext -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.synctext.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.synctext.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.SynctextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.cau.cs.kieler.yakindu.sccharts.model.stext.ui.synctext.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
