<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler.yakindu.sccharts.importer.commands.category"
            id="de.cau.cs.kieler.yakindu.sccharts.importer.KIXS2SCCTransformation"
            name="KIXS2SCCTransformation">
      </command>
      <category
            id="de.cau.cs.kieler.yakindu.sccharts.importer.commands.category"
            name="SCCharts">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.yakindu.sccharts.importer.handler.KixsModelFileHandler"
            commandId="de.cau.cs.kieler.yakindu.sccharts.importer.KIXS2SCCTransformation">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.yakindu.sccharts.importer.KIXS2SCCTransformation"
               label="Transform to Yakindu SCChart (scc)"
               mnemonic="K"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="kixs">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
