    <!-- quickfix marker resolution generator for de.cau.cs.kieler.synccharts.text.kits.Kits -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="de.cau.cs.kieler.synccharts.text.kits.ui.CustomizedKitsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.cau.cs.kieler.synccharts.text.kits.ui.kits.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.cau.cs.kieler.synccharts.text.kits.ui.CustomizedKitsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.cau.cs.kieler.synccharts.text.kits.ui.kits.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="de.cau.cs.kieler.synccharts.text.kits.ui.CustomizedKitsExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="de.cau.cs.kieler.synccharts.text.kits.ui.kits.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
