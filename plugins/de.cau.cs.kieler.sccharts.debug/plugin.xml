<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:#TextRulerContext">
         <command
               commandId="de.cau.cs.kieler.sccharts.text.ui.toggleBreakpointCommand"
               icon="platform:/plugin/de.cau.cs.kieler.sccharts.debug/icons/brkp_obj.png"
               label="Toggle Breakpoint"
               style="toggle">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="de.cau.cs.kieler.sccharts.text.sct.Sct.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.cau.cs.kieler.sccharts.debug.TextRulerHandler"
            description="Toggle Breakpoint in specified Line."
            id="de.cau.cs.kieler.sccharts.text.ui.toggleBreakpointCommand"
            name="Toggle Breakpoint Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="de.cau.cs.kieler.sccharts.debug.SCChartsBreakpoint"
            id="scchartsBreakpoint"
            markerType="de.cau.cs.kieler.sccharts.debug.scchartsBreakpointMarker">
      </breakpoint>
   </extension>
   <extension
         id="scchartsBreakpointMarker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
            class="de.cau.cs.kieler.sccharts.debug.ui.SCChartsDebugModelPresentation"
            id="scchartsDebugModelPresentation">
      </debugModelPresentation>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="de.cau.cs.kieler.sccharts.debug.ui.breakpoints.SCChartsBreakpointTargetAdapter"
            class="de.cau.cs.kieler.sccharts.debug.ui.breakpoints.SCChartsBreakpointTargetAdapterFactory">
         <adapter
               type="org.eclipse.xtext.ui.editor.XtextEditor">
         </adapter>
      </factory>
   </extension>
   <extension
         point="de.cau.cs.kieler.sim.kiem.toolbarContributor">
      <content
            class="de.cau.cs.kieler.sccharts.debug.ui.ViewDebugContributor"
            name="SCChartsDebugViewContributor">
      </content>
   </extension>
   <extension
         point="de.cau.cs.kieler.sim.kiem.json.datacomponent">
      <content
            class="de.cau.cs.kieler.sccharts.debug.DataComponent"
            id="de.cau.cs.kieler.sccharts.debug.datacomponent"
            name="Debugger">
      </content>
   </extension>
   <extension
         point="de.cau.cs.kieler.sim.kiem.eventListener">
      <content
            class="de.cau.cs.kieler.sccharts.debug.EventListener">
      </content>
   </extension>
   <extension
         point="de.cau.cs.kieler.sim.kiem.config.DefaultScheduleContributor">
      <executionFile
            file="execution/sccharts_c_debug.execution">
      </executionFile>
      <executionFile
            file="execution/scg_c_debug.execution">
      </executionFile>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.cau.cs.kieler.simulation">
         <view
               id="org.eclipse.debug.ui.BreakpointView"
               minimized="false"
               ratio="0.8"
               relationship="right"
               relative="de.cau.cs.kieler.kico.selection"
               visible="true">
         </view>
         <actionSet
               id=" org.eclipse.jdt.debug.ui.JDTDebugActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
    <extension point="org.eclipse.ui.editorActions">
    <editorContribution
          targetID="de.cau.cs.kieler.sccharts.text.sct.Sct"
          id="de.cau.cs.kieler.sccharts.debug.doubleClick">
       <action
             label="Not Used"
             class="de.cau.cs.kieler.sccharts.debug.TextRulerHandler"
             style="push"
             actionID="RulerDoubleClick"
             id="de.cau.cs.kieler.sccharts.debug.toggleDoubleClick"/>
    </editorContribution>
 </extension>
    <extension
          point="de.cau.cs.kieler.sccharts.klighd.hooks">
       <hook
             class="de.cau.cs.kieler.sccharts.debug.ui.BreakpointVisualizationHook">
       </hook>
    </extension>
 
</plugin>
