<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.klighd.diagramSyntheses">
      <diagramSynthesis
            class="de.cau.cs.kieler.klighd.syntheses.GuiceBasedSynthesisFactory:de.cau.cs.kieler.cview.klighd.DiagramSynthesis"
            id="de.cau.cs.kieler.cview">
      </diagramSynthesis>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.ui.view.editor">
      <editor
            controllerID="DISABLED de.cau.cs.kieler.cview.klighd.controllerX"
            editorID="DISABLED org.eclipse.cdt.ui.editor.CEditorX">
      </editor>
      <editor
            controllerID="DISABLED de.cau.cs.kieler.cview.klighd.controllerX"
            editorID="DISABLED org.eclipse.ui.DefaultTextEditorX">
      </editor>
      <fallbackController
            controllerID="DISABLED de.cau.cs.kieler.cview.klighd.controllerX"
            editorClass="DISABLED de.cau.cs.kieler.cview.KLighDControllerX">
      </fallbackController>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.ui.view.controller">
      <controller
            class="DISABLED  de.cau.cs.kieler.cview.KLighDController">
      </controller>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.cau.cs.kieler.cview.category"
            name="C View Category">
      </category>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.refresh"
            name="C View Refresh Command">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.filter"
            name="C View Filter Command">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.export"
            name="C View Export Analysis Command">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.select"
            name="C View Select Analysis Command">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.manualDiagramSynthesis"
            name="C View Manual Synthesis">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.warning"
            name="C View Show Huge Warning">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.highlightSelection"
            name="C View Highlight Selection">
      </command>
      <command
            categoryId="de.cau.cs.kieler.cview.category"
            id="de.cau.cs.kieler.cview.command.deactivateView"
            name="C View Deactivate Visualization">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.refresh">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.select">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.filter">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.export">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.manualDiagramSynthesis">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.warning">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.highlightSelection">
      </handler>
      <handler
            class="de.cau.cs.kieler.cview.ui.CommandHandler"
            commandId="de.cau.cs.kieler.cview.command.deactivateView">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.cau.cs.kieler.cview.toolbar.command"
               style="toggle">
            <command
                  commandId="de.cau.cs.kieler.cview.command.refresh"
                  icon="icon/cview.png"
                  id="de.cau.cs.kieler.cview.toolbar.command.button"
                  style="pulldown"
                  tooltip="Refresh  C View">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.extensions">
      <action
            class="de.cau.cs.kieler.cview.klighd.OpenEditorAction"
            id="de.cau.cs.kieler.cview.OpenEditorAction">
      </action>
      <action
            class="de.cau.cs.kieler.cview.klighd.OpenEditorForConnectionAction"
            id="de.cau.cs.kieler.cview.OpenEditorForConnectionAction">
      </action>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.extensions">
      <action
            class="de.cau.cs.kieler.cview.klighd.CollapseExpandNoDragAction"
            id="de.cau.cs.kieler.cview.CollapseExpandNoDragAction">
      </action>
   </extension>
   <extension-point id="analysis" name="Define Analysis" schema="schema/analysis.exsd"/>
   <extension-point id="export" name="Define Export" schema="schema/export.exsd"/>
   <extension-point id="language" name="Define Language" schema="schema/language.exsd"/>
   
     <extension point="org.eclipse.ui.menus">
     <menuContribution locationURI="menu:de.cau.cs.kieler.cview.toolbar.command.button">
        <command
              commandId="de.cau.cs.kieler.cview.command.refresh"
              icon="icon/refresh.gif"
              id="de.cau.cs.kieler.cview.command.refresh"
              label="Refresh  C View"
              style="push"
              tooltip="Refresh the current analysis model and apply all selected analyzers.">
        </command>
        <separator name="filterandselectadditions" visible="true">
        </separator>
        <command
              commandId="de.cau.cs.kieler.cview.command.filter"
              icon="icon/filter.gif"
              id="de.cau.cs.kieler.cview.command.filter"
              label="Configure Filter..."
              style="push"
              tooltip="Configure a filter on the current analysis model (since last refresh).">
        </command>
        <command
              commandId="de.cau.cs.kieler.cview.command.select"
              icon="icon/select.gif"
              id="de.cau.cs.kieler.cview.command.select"
              label="Select Analysis..."
              style="push"
              tooltip="Select one or more analysis to apply for next refresh.">
        </command>
        <separator name="saveadditions" visible="true">
        </separator>
        <command
              commandId="de.cau.cs.kieler.cview.command.export"
              helpContextId="Export the current analysis model (since last refresh)."
              icon="icon/saveas.gif"
              id="de.cau.cs.kieler.cview.command.export"
              label="Export Analysis Results..."
              style="push">
        </command>
        <separator
              name="synthesisadditions"
              visible="true">
        </separator>
        <command
              commandId="de.cau.cs.kieler.cview.command.manualDiagramSynthesis"
              icon="icon/manual.gif"
              id="de.cau.cs.kieler.cview.command.manualDiagramSynthesis"
              label="Manual Diagram Synthesis"
              style="toggle"
              tooltip="No automatic diagram synthesis on option change. You must trigger a refresh manually.">
        </command>
        <command
              commandId="de.cau.cs.kieler.cview.command.warning"
              icon="icon/warning.gif"
              id="de.cau.cs.kieler.cview.command.warning"
              label="Huge Analysis Warning"
              style="toggle"
              tooltip="Warn about large selections which could result in non-interactive tooling.">
        </command>
        <command
              commandId="de.cau.cs.kieler.cview.command.deactivateView"
              icon="icon/novis.gif"
              label="Deactivate Graphical View"
              style="toggle"
              tooltip="Select this if you only want to export an anlaysis and don&apos;t want to care about the visual diagram and skip its synthesis.">
        </command>
        <separator
              name="VisualisationAdditions"
              visible="true">
        </separator>
        <command
              commandId="de.cau.cs.kieler.cview.command.highlightSelection"
              icon="icon/highlightselection.gif"
              label="Highlight Selection"
              style="toggle"
              tooltip="Each selected component will be high-lighted in contrast to other, non-selected components.">
        </command>
     </menuContribution>
  </extension>
     <extension
           point="org.eclipse.ui.startup">
        <startup
              class="de.cau.cs.kieler.cview.Startup">
        </startup>
     </extension>
     <extension
           point="org.eclipse.ui.bindings">
        <key
              commandId="de.cau.cs.kieler.cview.command.refresh"
              contextId="org.eclipse.ui.contexts.window"
              schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
              sequence="ALT+R">
        </key>
        <key
              commandId="de.cau.cs.kieler.cview.command.filter"
              contextId="org.eclipse.ui.contexts.window"
              schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
              sequence="ALT+F">
        </key>
        <key
              commandId="de.cau.cs.kieler.cview.command.select"
              contextId="org.eclipse.ui.contexts.window"
              schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
              sequence="ALT+S">
        </key>
        <key
              commandId="de.cau.cs.kieler.cview.command.export"
              contextId="org.eclipse.ui.contexts.window"
              schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
              sequence="ALT+E">
        </key>
     </extension>
     <extension
           point="de.cau.cs.kieler.klighd.extensions">
        <action
              class="de.cau.cs.kieler.cview.klighd.EditorLinkageAction"
              id="de.cau.cs.kieler.cview.EditorLinkageAction">
        </action>
     </extension>
     <extension
           point="de.cau.cs.kieler.klighd.extensions">
        <action
              class="de.cau.cs.kieler.cview.klighd.HighlightEdgesAction"
              id="de.cau.cs.kieler.cview.HighlightEdgesAction">
        </action>
     </extension>
     <extension
           point="de.cau.cs.kieler.klighd.extensions">
        <action
              class="de.cau.cs.kieler.cview.klighd.DeselectHighlightingAction"
              id="de.cau.cs.kieler.cview.DeselectHighlightingAction">
        </action>
     </extension>
</plugin>
