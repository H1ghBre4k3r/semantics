<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.klighd.extensions">
      <styleModifier
            class="de.cau.cs.kieler.sccharts.klighd.SCChartsRegionLineModifier"
            id="de.cau.cs.kieler.sccharts.klighd.regionLineModifier">
      </styleModifier>
   </extension>
   <extension
         point="de.cau.cs.kieler.klighd.diagramSyntheses">
      <diagramSynthesis
            class="de.cau.cs.kieler.klighd.syntheses.GuiceBasedSynthesisFactory:de.cau.cs.kieler.sccharts.klighd.SCChartsDiagramSynthesis"
            id="de.cau.cs.kieler.sccharts.klighd.diagramSynthesis">
      </diagramSynthesis>
   </extension>
   <extension
         point="de.cau.cs.kieler.kiml.layoutConfigs">
      <staticConfig
            class="de.cau.cs.kieler.sccharts.State"
            option="de.cau.cs.kieler.spacing"
            value="1.0">
      </staticConfig>
      <staticConfig
            class="de.cau.cs.kieler.sccharts.State"
            option="de.cau.cs.kieler.borderSpacing"
            value="2.0">
      </staticConfig>
      <staticConfig
            class="de.cau.cs.kieler.sccharts.State"
            option="de.cau.cs.kieler.sizeConstraint"
            value="[MINIMUM_SIZE, DEFAULT_MINIMUM_SIZE]">
      </staticConfig>
      <staticConfig
            class="de.cau.cs.kieler.sccharts.State"
            option="de.cau.cs.kieler.expandNodes"
            value="true">
      </staticConfig>
      <staticConfig
            class="de.cau.cs.kieler.sccharts.State"
            option="de.cau.cs.kieler.interactive"
            value="true">
      </staticConfig>
      <staticConfig
            class="de.cau.cs.kieler.sccharts.Region"
            option="de.cau.cs.kieler.spacing"
            value="40.0">
      </staticConfig>
      <!-- option
            class="de.cau.cs.kieler.sccharts.Region"
            option="de.cau.cs.kieler.borderSpacing"
            value="1.0">
      </option -->
      <staticConfig
            class="de.cau.cs.kieler.sccharts.Region"
            option="de.cau.cs.kieler.direction"
            value="RIGHT">
      </staticConfig>
      <semanticConfig
            class="de.cau.cs.kieler.sccharts.Scope"
            config="de.cau.cs.kieler.sccharts.klighd.layout.HVLayoutConfig">
      </semanticConfig>
      <semanticConfig
            class="de.cau.cs.kieler.sccharts.Scope"
            config="de.cau.cs.kieler.sccharts.klighd.layout.AnnotationsLayoutConfig">
      </semanticConfig>
      <semanticConfig
            class="de.cau.cs.kieler.sccharts.State"
            config="de.cau.cs.kieler.sccharts.klighd.layout.StateLayoutConfig">
      </semanticConfig>
      <semanticConfig
            class="de.cau.cs.kieler.sccharts.Region"
            config="de.cau.cs.kieler.sccharts.klighd.layout.RegionLayoutConfig">
      </semanticConfig>
   </extension>

</plugin>
