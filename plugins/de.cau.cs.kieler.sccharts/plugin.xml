<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://kieler.cs.cau.de/sccharts/0.1.0"
            class="de.cau.cs.kieler.sccharts.SCChartsPackage"
            genModel="model/sccharts.genmodel"/>
   </extension>



   
     <extension
         point="de.cau.cs.kieler.kico.transformation">
         
       <!-- check dependencies -->        
      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Const"
            dependencies="INITIALIZATION" 
            id="CONST"
            method="transform"
            name="Const">
      </transformationMethod>
      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Map"
            dependencies="FOR"
            id="MAP"
            method="transform"
            name="Map">
      </transformationMethod>
         
       <!-- check dependencies -->        
      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.For"
            dependencies="WEAKSUSPEND, HISTORY, SIGNAL, SUSPEND, COUNTDELAY, PRE, CONST" 
            id="FOR"
            method="transform"
            name="For">
      </transformationMethod>
      
       <!-- check dependencies -->        
      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Reference"
            dependencies="MAP" 
            id="REFERENCE"
            method="transform"
            name="Reference">
      </transformationMethod>
         
      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.History"
            dependencies="STATIC"
            id="HISTORY"
            method="transform"
            name="History">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.WeakSuspend"
            dependencies="DEFERRED, STATIC, COMPLEXFINALSTATE"
            id="WEAKSUSPEND"
            method="transform"
            name="Weak Suspend">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Deferred"
            dependencies="DURING"
            id="DEFERRED"
            method="transform"
            name="Deferred">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Static"
            dependencies="INITIALIZATION"
            id="STATIC"
            method="transform"
            name="Static">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Signal"
            dependencies="DURING"
            id="SIGNAL"
            method="transform"
            name="Signal">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.CountDelay"
            dependencies="DURING, ABORT"
            id="COUNTDELAY"
            method="transform"
            name="Count Delay">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Pre"
            dependencies="INITIALIZATION"
            id="PRE"
            method="transform"
            name="Pre">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Suspend"
            dependencies="DURING"
            id="SUSPEND"
            method="transform"
            name="Suspend">
      </transformationMethod>
      
     <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.ComplexFinalState"
            dependencies="ABORT"
            id="COMPLEXFINALSTATE"
            method="transform"
            name="Complex Final State">
      </transformationMethod>


      <transformationGroup
            alternatives="true"
            id="ABORT"
            name="Abort"
            transformations="ABORTNOWTO, ABORTDEFAULT, ABORTSPECIAL">
      </transformationGroup>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Abort"
            dependencies="EXIT, INITIALIZATION"
            id="ABORTSPECIAL"
            method="transformAbortSpecial"
            name="Abort Special">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Abort"
            dependencies="EXIT, INITIALIZATION"
            id="ABORTDEFAULT"
            method="transformAbort"
            name="Abort Default">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Abort"
            dependencies="EXIT, INITIALIZATION"
            id="ABORTNOWTO"
            method="transformAbortNoWTO"
            name="Abort No WTO">
      </transformationMethod>


      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.During"
            dependencies="COMPLEXFINALSTATE"
            id="DURING"
            method="transform"
            name="During">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Initialization"
            dependencies="ENTRY"
            id="INITIALIZATION"
            method="transform"
            name="Initialization">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Entry"
            dependencies="CONNECTOR"
            id="ENTRY"
            method="transform"
            name="Entry">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Exit"
            dependencies="CONNECTOR"
            id="EXIT"
            method="transform"
            name="Exit">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.Connector"
            id="CONNECTOR"
            method="transform"
            dependencies="TRIGGEREFFECT"
            name="Connector">
      </transformationMethod>


      <transformationGroup
            id="SCADEQUARTZESTEREL"
            isFeatureGroup="true"
            name="SCADE / QUARTZ / Esterel v7"
            transformations="HISTORY, STATIC, WEAKSUSPEND, DEFERRED">
      </transformationGroup>

      <transformationGroup
            id="STATECHARTS"
            isFeatureGroup="true"
            name="Statecharts"
            transformations="CONST, COMPLEXFINALSTATE, ABORT, DURING, EXIT, INITIALIZATION, ENTRY, CONNECTOR">
      </transformationGroup>


      <transformationGroup
            id="SYNCCHARTS"
            isFeatureGroup="true"
            name="SyncCharts"
            transformations="SUSPEND, SIGNAL, COUNTDELAY, PRE">
      </transformationGroup>
      <transformationGroup
            id="EXPANSIONS"
            isCategory="false"
            isFeatureGroup="true"
            name="SCCharts Expansions"
            transformations="REFERENCE, FOR, MAP">
      </transformationGroup>


      <transformationGroup
            id="EXTENDED"
            isCategory="true"
            name="Extended SCCharts"
            transformations="SCADEQUARTZESTEREL, STATECHARTS, SYNCCHARTS, EXPANSIONS">
      </transformationGroup>

      <transformationGroup
            id="CORE"
            isCategory="true"
            name="Core SCCharts"
            transformations="TRIGGEREFFECT, SURFACEDEPTH">
      </transformationGroup>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.TriggerEffect"
            id="TRIGGEREFFECT"
            method="transform"
            dependencies="SURFACEDEPTH"
            name="Trigger and Effect">
      </transformationMethod>

      <transformationMethod
            class="de.cau.cs.kieler.sccharts.transformations.SurfaceDepth"
            dependencies="SCG"
            id="SURFACEDEPTH"
            method="transform"
            name="Surface Depth">
      </transformationMethod>
      <transformationGroup
            id="ALL"
            isCategory="false"
            isFeatureGroup="false"
            transformations="EXTENDED, CORE, SCG">
      </transformationGroup>

      
   </extension>
     <extension
           point="de.cau.cs.kieler.kico.extension">
        <ExtensionInformation
              className="State"
              editor_id="de.cau.cs.kieler.sccharts.presentation.SCChartsEditorID"
              extensionName="sct"
              isXMI="true">
        </ExtensionInformation>
     </extension>   


</plugin>
