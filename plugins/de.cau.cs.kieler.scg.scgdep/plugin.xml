<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler.scg.scgdep.commands.category"
            id="de.cau.cs.kieler.scg.scgdep.commands.SCGToSCGDEPTransformation"
            name="Transform SCG to SCGDEP">
      </command>
      <command
            categoryId="de.cau.cs.kieler.scg.scgdep.commands.category"
            id="de.cau.cs.kieler.scg.scgdep.commands.SCCToSCGDEPTransformation"
            name="Transform SCC to SCGDEP">
      </command>
      <category
            id="de.cau.cs.kieler.scg.scgdep.commands.category"
            name="SCGDEP Category">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.scg.scgdep.handler.SCGraphModelFileHandler"
            commandId="de.cau.cs.kieler.scg.scgdep.commands.SCGToSCGDEPTransformation">
      </handler>
      <handler
            class="de.cau.cs.kieler.scg.scgdep.handler.SCChartsModelFileHandler"
            commandId="de.cau.cs.kieler.scg.scgdep.commands.SCCToSCGDEPTransformation">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.scg.scgdep.commands.SCGToSCGDEPTransformation"
               label="Transform SCG to SCGDEP"
               mnemonic="A"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scg">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.scg.scgdep.commands.SCCToSCGDEPTransformation"
               label="Transform SCC to SCGDEP"
               mnemonic="A"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scc">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.scg.scgdep.commands.SCCToSCGDEPTransformation"
               label="Transform SCT to SCGDEP"
               mnemonic="A"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="sct">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
