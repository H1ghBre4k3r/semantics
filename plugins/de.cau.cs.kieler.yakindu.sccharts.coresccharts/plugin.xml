<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.category"
            id="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.AllCoreTransformations"
            name="AllCoreTransformations">
      </command>
      <category
            id="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.category"
            name="SCCharts Transformations">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.yakindu.sccharts.coresccharts.handler.SCCModelFileHandler"
            commandId="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.SignalTransformation">
      </handler>
      <handler
            class="de.cau.cs.kieler.yakindu.sccharts.coresccharts.handler.AllCoreSCCModelFileHandler"
            commandId="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.AllCoreTransformations">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="de.cau.cs.kieler.yakindu.sccharts.coresccharts.coretransformations"
               label="Transform SCCharts"
               mnemonic="T">
            <separator
                  name="de.cau.cs.kieler.core.ui.separator1"
                  visible="true">
            </separator>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.cau.cs.kieler.yakindu.sccharts.coresccharts.coretransformations">
         <command
               commandId="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.AllCoreTransformations"
               label="All Core Transformations"
               mnemonic="A"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scc">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.cau.cs.kieler.yakindu.sccharts.coresccharts.coretransformations">
         <command
               commandId="de.cau.cs.kieler.yakindu.sccharts.coresccharts.commands.SignalTransformation"
               label="Signals"
               mnemonic="A"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scc">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
