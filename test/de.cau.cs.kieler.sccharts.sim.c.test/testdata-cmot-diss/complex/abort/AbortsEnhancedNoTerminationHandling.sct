@diagram[KLayLayered] false  
@layout[direction] DOWN  
@diagram[Declarations] false  

scchart AbortsEnhancedNoTerminationHandling {
  output bool S1toS2 = false;
  output bool S2toS3 = false;
  input bool S1trig;
  output bool S1act = false;
  input bool W1trig;
  output bool W1act = false;
  output bool N1act = false;

  initial state M {

    initial state S1
    --> S2 with / S1toS2 = true;

    state S2
    --> S3 with / S2toS3 = true;

    final state S3;
  }
  o-> S1 immediate with S1trig / S1act  = true
  --> W1 immediate with W1trig / W1act  = true
  >-> N with / N1act  = true;
 
  state S1;
  
  state W1;

  state N;
}