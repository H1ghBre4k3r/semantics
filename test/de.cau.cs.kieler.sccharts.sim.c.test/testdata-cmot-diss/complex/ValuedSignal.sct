@diagram[KLayLayered] false  
scchart ValuedSignal {
  output signal int x = 1 combine +;
  output signal int y = 2 combine +; 

  region R1: 
 
  initial state S1
  --> S2 with / x(3);
 
  state S2;

  region R2:

  initial state S3
  --> S4 with / x(4);

  state S4;
  
  region R3:
 
  initial state S5
  --> S6 with x / y(val(x));

  state S6;
} 