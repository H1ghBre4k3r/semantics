@Transformation DURING
scchart DuringAction {
	input bool I;
	output bool O;
    
    int x=0;
    
    initial state A{ 
      during / O = !O;
      during I / x = x+1;
      during !I / x = x-1;
      
      initial state A0
      --> A1;
      
      state A1 {
        during / I = !I;
      }
      --> A0;
    };
}