
@Transformation COMPLEXFINALSTATE
scchart ComplexFinalState {
  input bool I;

  initial state A {
    bool _abort = false;
    bool _term = false;
    bool _term2 = false;

    region R1:

    initial state A0
    --> A1 with / _term = true;

    state A1
    --> A0 with I / _term = false
    --> _Final immediate with _abort;

    final state _Final;

    region R2:

    initial state A2
    --> A3 with / _term2 = true;

    final state A3;

    region _Watch:

    initial state _Watch
    --> _Aborted immediate with _term && _term2 / _abort = true;

    final state _Aborted;
  }
  >-> F;

  final state F;
}