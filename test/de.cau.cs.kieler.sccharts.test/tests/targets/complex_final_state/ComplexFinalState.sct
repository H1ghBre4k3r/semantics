
@Transformation COMPLEXFINALSTATE
scchart ComplexFinalState {
  input bool I;

  initial state A {
    bool _abort = false;
    bool _term = false;

    initial state A0
    --> A1 / _term = true;

    state A1
    --> A0 with I / _term = false
    --> _Final immediate with _abort;

    final state _Final;

    region _Watch:

    initial state _Watch
    --> _Aborted immediate with _term / _abort = true;

    final state _Aborted;
  }
  >-> F;

  final state F;
}