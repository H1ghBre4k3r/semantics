
@Transformation SIGNAL
scchart ValuedSignals {
  bool x;
  bool y;
  int x_val;
  int x_curval = 1;
  int y_val;
  int y_curval = 2;
  immediate during x / x_val = x_curval;
  immediate during / x_curval = 0;
  immediate during / x = false;
  immediate during y / y_val = y_curval;
  immediate during / y_curval = 0;
  immediate during / y = false;

  region R1:

  initial state A
  --> B / x_curval = 3; x = x || true;

  final state B;

  region R2:

  initial state C
  --> D with x / y_curval = x_val; y = y || true;

  final state D;
}