
@Transformation SIGNAL
scchart ValuedSignal {
  bool x;
  int x_val combine +;
  int x_curval combine +;
  immediate during x / x_val = x_curval;
  immediate during / x_curval = 0;
  immediate during / x = false;

  initial state A
  --> B with / x_curval = x_curval + 3; x = x || true;

  state B;
}